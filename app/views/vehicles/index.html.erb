<div class="container">
  <h1>Show all <%= params[:category] %>s</h1>

  <% @vehicles.each do |vehicle| %>
    <div>
      <%= link_to vehicle_path(vehicle) do %>
      <%= image_tag vehicle.photo.url, height: 300, width: 400, crop: :fill %>
      <%= vehicle.description %>
      <%= vehicle.price_day %>
      </div>
      <% end %>
  <% end %>
</div>
