<div class="container">

  <div class="booking-card">
  <div class="booking-details">

  </div>
  <div id="photo-vehicle">
    <%= cl_image_tag @vehicle.photo.url %>
  </div>
  <div class="booking-details">
    <h1>Booking</h1>
    <p><strong>Description:</strong> <%= @vehicle.description.capitalize %></p>
    <p><strong>Daily price:</strong> <%= @vehicle.price_day %></p>
    <p>Total Price</p>
  </div>
</div>
</div>
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">

    <%= simple_form_for ([@vehicle, @booking]) do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Book Vehicool", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
